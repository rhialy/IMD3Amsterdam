<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee6d2"
    android:clickable="true"
    android:showDividers="none"
    android:gravity="fill">
    <ViewFlipper
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/viewFlipper1">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/MainPreferences"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#eee6d2"
            android:clickable="true"
            android:showDividers="none"
            android:gravity="fill">
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/fullScreenLayout"
                android:gravity="clip_horizontal"
                android:clickable="true">
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/spaceUp"
                    android:minHeight="25dp"
                    android:minWidth="40dp" />
                <Button
                    android:text="Gef채llt mir!"
                    android:id="@+id/takeItFirst"
                    android:background="#ff216877"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="135dp"
                    android:layout_marginRight="135dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="40dp"
                    android:minWidth="120dp"
                    android:minHeight="50dp" />
                <Button
                    android:text="Gef채llt mir!"
                    android:id="@+id/takeItSecond"
                    android:background="#ff216877"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="135dp"
                    android:layout_marginRight="135dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="40dp"
                    android:minWidth="120dp"
                    android:minHeight="50dp" />
                <Button
                    android:text="Gef채llt mir!"
                    android:id="@+id/takeItThird"
                    android:background="#ff216877"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="135dp"
                    android:layout_marginRight="135dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="40dp"
                    android:minWidth="120dp"
                    android:minHeight="50dp" />
                <Button
                    android:text="Gef채llt mir!"
                    android:id="@+id/takeItFourth"
                    android:background="#ff216877"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="135dp"
                    android:layout_marginRight="135dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="40dp"
                    android:minWidth="120dp"
                    android:minHeight="50dp" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layoutUpperImageLine">
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/layoutFirstImage"
                    android:minHeight="185dp"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">
                    <ImageView
                        android:id="@+id/imageView1"
                        android:minWidth="150dp"
                        android:minHeight="150dp"
                        android:src="@drawable/test"
                        android:scaleType="centerCrop"
                        android:contextClickable="true"
                        android:fitsSystemWindows="true"
                        android:maxWidth="150dp"
                        android:maxHeight="150dp"
                        android:clickable="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/layoutSecondImage"
                    android:minHeight="185dp"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="20dp">
                    <ImageView
                        android:id="@+id/imageView2"
                        android:minWidth="150dp"
                        android:minHeight="150dp"
                        android:src="@drawable/test"
                        android:scaleType="centerCrop"
                        android:contextClickable="true"
                        android:fitsSystemWindows="true"
                        android:maxWidth="150dp"
                        android:maxHeight="150dp"
                        android:clickable="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layoutLowerImageLine">
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/layoutThirdImage"
                    android:minHeight="185dp"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView3"
                        android:minWidth="150dp"
                        android:minHeight="150dp"
                        android:src="@drawable/test"
                        android:scaleType="centerCrop"
                        android:contextClickable="true"
                        android:fitsSystemWindows="true"
                        android:layout_marginRight="0dp"
                        android:maxWidth="150dp"
                        android:maxHeight="150dp"
                        android:clickable="true"
                        android:adjustViewBounds="true" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/layoutFourthImage"
                    android:minHeight="185dp"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="20dp">
                    <ImageView
                        android:id="@+id/imageView4"
                        android:minWidth="150dp"
                        android:minHeight="150dp"
                        android:src="@drawable/test"
                        android:scaleType="centerCrop"
                        android:contextClickable="true"
                        android:fitsSystemWindows="true"
                        android:adjustViewBounds="true"
                        android:maxWidth="150dp"
                        android:maxHeight="150dp"
                        android:clickable="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/LayoutNextBackButton"
                android:minHeight="120dp"
                android:clickable="true">
                <Button
                    android:text="Next"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/nextButton"
                    android:background="#ff216877" />
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/space2"
                    android:minWidth="50dp"
                    android:minHeight="10dp" />
                <Button
                    android:text="Back"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/backButton"
                    android:background="#ff216877" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/ImageChoosingExplanation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#eee6d2"
            android:clickable="true"
            android:showDividers="none"
            android:gravity="fill">
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout1"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical">
                <TextView
                    android:text="W채hle auf den n채chsten Seiten das Bild aus, das dir am meisten gef채llt."
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#ff414141"
                    android:id="@+id/textView1"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_vertical"
                    android:textSize="28dp"
                    android:layout_marginTop="100dp" />
                <ImageView
                    android:src="@drawable/gowl_animal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/gowlExplanation"
                    android:minWidth="145dp"
                    android:minHeight="145dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="95dp"
                    android:layout_marginBottom="25dp"
                    android:maxWidth="150dp"
                    android:maxHeight="150dp"
                    android:scaleX="0.35"
                    android:scaleY="0.35"
                    android:adjustViewBounds="true" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/LayoutNextBackButton"
                android:minHeight="120dp"
                android:clickable="true">
                <Button
                    android:text="Next"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/nextButtonChoosing"
                    android:background="#ff216877"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="0dp" />
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/spaceChoosing"
                    android:minWidth="50dp"
                    android:minHeight="10dp" />
                <Button
                    android:text="Back"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/backButtonChoosing"
                    android:background="#ff216877" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/CalendarLayoutStart">
            <TextView
                android:text="Wann soll die Reise beginnen?"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ChooseStartDateText"
                android:textColor="#ff414141"
                android:textSize="28dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp" />
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="300dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxWidth="150dp"
                android:maxHeight="150dp"
                android:id="@+id/CalendarSubLayout"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp">
                <DatePicker
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:id="@+id/DatePickerStart"
                    android:minWidth="120dp"
                    android:minHeight="120dp"
                    android:maxHeight="150dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="0dp"
                    android:background="#216877"
                    android:layout_marginBottom="5dp"
                    android:paddingBottom="20dp" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/LayoutCalendarNextBack"
                android:minHeight="120dp"
                android:clickable="true">
                <Button
                    android:text="Next"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/nextButtonDateStart"
                    android:background="#ff216877" />
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/spaceCalendar"
                    android:minWidth="50dp"
                    android:minHeight="10dp" />
                <Button
                    android:text="Back"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/backButtonCalendar"
                    android:background="#ff216877" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/CalendarLayoutEnd">
            <TextView
                android:text="Wann soll die Reise enden?"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ChooseEndDateText"
                android:textColor="#ff414141"
                android:textSize="28dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp" />
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="300dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxWidth="150dp"
                android:maxHeight="150dp"
                android:id="@+id/CalendarSubLayout"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="10dp">
                <DatePicker
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:id="@+id/DatePickerEnd"
                    android:minWidth="120dp"
                    android:minHeight="120dp"
                    android:maxHeight="150dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="0dp"
                    android:background="#216877"
                    android:paddingBottom="18dp" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/LayoutCalendarNextBack"
                android:minHeight="120dp"
                android:clickable="true">
                <Button
                    android:text="Next"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/nextButtonDateEnd"
                    android:background="#ff216877" />
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/spaceCalendar"
                    android:minWidth="50dp"
                    android:minHeight="10dp" />
                <Button
                    android:text="Back"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/backButtonCalendar"
                    android:background="#ff216877" />
            </LinearLayout>
        </LinearLayout>
    </ViewFlipper>
</LinearLayout>