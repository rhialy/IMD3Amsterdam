<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffeee6d2"
    android:minWidth="25px"
    android:minHeight="25px">
    <ViewFlipper
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/viewFlipper1">
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linearLayout1"
            android:gravity="center_horizontal"
            android:layout_marginTop="75dp">
            <Button
                android:text="Neue Reise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/NewJourneyButton"
                android:background="#216877"
                android:minWidth="260dp"
                android:minHeight=" 70dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="45dp"
                android:textSize="20dp" />
            <Button
                android:text="Profildaten"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/UserDataButton"
                android:background="#216877"
                android:minWidth="260dp"
                android:minHeight=" 70dp"
                android:layout_marginTop="45dp"
                android:layout_marginBottom="45dp"
                android:textSize="20dp" />
            <ImageView
                android:src="@drawable/gowl_animal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView1"
                android:minWidth="80dp"
                android:minHeight="80dp"
                android:layout_marginRight="110dp"
                android:layout_marginTop="0dp"
                android:adjustViewBounds="true"
                android:maxWidth="150dp"
                android:maxHeight="150dp"
                android:layout_marginBottom="35dp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linearLayout2"
            android:gravity="center_horizontal"
            android:layout_marginTop="75dp">
            <Button
                android:text="Zur체cksetzen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/NewMainPreferences"
                android:background="#216877"
                android:minWidth="260dp"
                android:minHeight=" 70dp"
                android:layout_marginBottom="45dp"
                android:textSize="20dp" />
            <TextView
                android:text="Wenn Du mit deinen Ergebnissen nicht zufrieden bist, kannst du mit Hilfe dieses Buttons alle Pr채ferenz-Daten zur체cksetzen"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ResetExplanation"
                android:gravity="center_horizontal"
                android:textSize="28dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="20dp"
                android:textColor="#ff414141" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout3">
                <ImageView
                    android:src="@drawable/gowl_animal"
                    android:id="@+id/imageView1"
                    android:minWidth="90dp"
                    android:minHeight="90dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:maxWidth="90dp"
                    android:maxHeight="90dp"
                    android:adjustViewBounds="true"
                    android:layout_marginRight="25dp" />
                <Button
                    android:text="Zur체ck"
                    android:id="@+id/backButtonUserData"
                    android:minWidth="200dp"
                    android:minHeight="60dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:background="#216877" />
            </LinearLayout>
        </LinearLayout>
    </ViewFlipper>
</LinearLayout>