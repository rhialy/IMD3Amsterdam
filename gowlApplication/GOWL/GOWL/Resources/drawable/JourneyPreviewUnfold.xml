<?xml version="1.0" encoding="UTF-8" ?>
                <LinearLayout
                	xmlns:android="http://schemas.android.com/apk/res/android"
                    android:orientation="vertical"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/UnfoldPreviewTemplate">
                    <ImageView
                        android:src="@drawable/framepreview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/UnfoldImage"
                        android:adjustViewBounds="true"
                        android:scaleY="0.5" />
                    <LinearLayout
                        android:orientation="horizontal"
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/linearLayout2">
                        <ImageView
                            android:src="@drawable/journeytest"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/imageView1"
                            android:adjustViewBounds="true"
                            android:minWidth="120dp"
                            android:minHeight="120dp"
                            android:maxWidth="200dp"
                            android:maxHeight="200dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp" />
                        <TextView
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:id="@+id/UnfoldDescription"
                            android:gravity="center_horizontal"
                            android:textSize="26dp"
                            android:textColor="#ff414141"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="test test test test test" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/linearLayout3">
                        <SeekBar
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/UnfoldSeeker"
                            android:minWidth="170dp"
                            android:minHeight="0dp"
                            android:layout_marginLeft="10dp"
                            android:max="6" />
                        <LinearLayout
                            android:orientation="horizontal"
                            android:minWidth="25px"
                            android:minHeight="25px"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/linearLayout4"
                            android:gravity="center_horizontal"
                            android:layout_gravity="center_horizontal">
                            <TextView
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:id="@+id/UnfoldDuration"
                                android:gravity="center_horizontal"
                                android:textSize="20dp"
                                android:textColor="#ff414141"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="x Tage"
                                android:layout_marginTop="5dp"
                                android:layout_gravity="center_horizontal" />
                        </LinearLayout>
                    </LinearLayout>
                    <ImageView
                        android:src="@drawable/framepreview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView3"
                        android:scaleY="0.5"
                        android:adjustViewBounds="true" />
                </LinearLayout>
