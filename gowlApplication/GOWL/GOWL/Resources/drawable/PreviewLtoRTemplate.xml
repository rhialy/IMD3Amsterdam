<?xml version="1.0" encoding="UTF-8" ?>
                <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                    android:orientation="vertical"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/JourneyPartLtoR">
                      					<LinearLayout
                    	android:orientation="horizontal"
                    	android:minWidth="25px"
                    	android:minHeight="25px"
                    	android:layout_width="match_parent"
                    	android:layout_height="wrap_content"
                    	android:id="@+id/JourneyPartRtoL">
                    <ImageButton
                        android:src="@drawable/kabelpark"
                        android:background="@drawable/roundedbutton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ImageButtonPreviewLtoR"
                        android:layout_gravity="center_horizontal"
                        android:minWidth="70dp"
                        android:minHeight="70dp"
                        android:maxWidth="125dp"
                        android:maxHeight="125dp"
                        android:scaleType="fitCenter"
                        android:paddingBottom="20dp"
                        android:paddingLeft="20dp"
                        android:adjustViewBounds="true"
                        android:paddingRight="20dp"
                        android:paddingTop="20dp"
                        android:layout_marginLeft="50dp" />
                                            	<TextView
		            		android:text="28.01.2016"
		            		android:layout_gravity="center_vertical"
				            android:textAppearance="?android:attr/textAppearanceLarge"
    				        android:id="@+id/date"
        				    android:minHeight="50dp"
		    		        android:layout_width="wrap_content"
    		    		    android:layout_height="wrap_content"
		        		    android:textColor="#ff414141"
        				    android:textScaleX="1"
	        			    android:textSize="26dp"
	    	    	    	android:paddingBottom="0dp"
	    	    	    	android:paddingTop="0dp"
	        	    		android:layout_marginTop="0dp"
	        	    		android:layout_marginLeft="20dp"
	        	    		android:layout_marginRight="0dp" />
                        </LinearLayout>
                    <ImageView
                        android:src="@drawable/previewlnr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/ConnectionLineTwo"
                        android:adjustViewBounds="true"
                        android:maxWidth="150dp"
                        android:maxHeight="150dp" />
                </LinearLayout>
